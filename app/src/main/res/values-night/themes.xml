<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PruebaTecnica" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryVariant">@color/light_blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_A400</item>
        <item name="colorSecondaryVariant">@color/cardview_light_background</item>
        <item name="colorOnSecondary">@color/light_blue_A200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.PruebaTecnica.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>